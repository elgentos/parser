{
  "name": "elgentos/parser",
  "type": "library",
  "description": "Elgentos Parser for json/yaml files to readable array",
  "homepage": "https://elgentos.nl/",

  "minimum-stability": "stable",

  "license": "MIT",
  "authors": [
    {
      "name": "Jeroen Boersma",
      "email": "jeroen@elgentos.nl",
      "homepage": "https://github.com/JeroenBoersma"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "symfony/yaml": "^3.4 || ^4.0 || ^5.0",
    "phpunit/phpunit": "^9.5"
  },
  "suggest": {
    "symfony/yaml": "Install symfony/yaml to support yaml parsing"
  },
  "autoload": {
    "psr-4": {
      "Elgentos\\": ["src"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Elgentos\\": ["tests"]
    }
  }
}
